// *** HEADER *** //
cf()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both
// Menu desktop
.menu-nav
	.menu-item
		display inline-block
		position relative
		&:hover
			.menu-sub-list
				display block
	.menu-sub-list
		position absolute
		top 1em
		left 0
		display none

// Logo
.header
	text-align center
	.w-logo
		display inline-block
		line-height 0
		margin-top 1em
	.logo-img
		display inline-block
		width 125px
		img
			display block

// *** FOOTER ***
.footer
	// Footer bottom
	.copyright
		background-color base
		overflow hidden
		font-size 12px
		height 4em
	.from
		float left
		p
			margin 0
	.by
		float right
		color gray
		.staffcreativa
			position relative
			padding-right 0.45em
			transition all 0.25s ease
			&:after
				content '\e60e'
				font-family icomoon
				font-size 0.7em
				font-style normal
				font-variant normal
				font-weight normal
				line-height 1
				position absolute
				right 0
				speak none
				text-transform none
				top 0.1em
		a
			&:hover .staffcreativa
				color negro
	.w-copyright
		margin-top 1.5em

// Menu responsive
.r-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index -1
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.65s ease
.w-nav
	display none
	position absolute
	top 0
	right 0
	font-size 2em
	z-index 1001
.menu-mobile
	cursor pointer
	visibility visible
	opacity 1
	transform scale(1,1)
	transition all 0.45s cubic-bezier(.89,1.5,.8,1.06)
.menu-mobile-close
	cursor pointer
	position fixed
	top 0
	right 0
	visibility hidden
	opacity 0
	transform scale(0,0)
	transition all 0.45s cubic-bezier(.89,1.5,.8,1.06)
.menu-responsive
	width 200px
	height 100%
	overflow hidden
	position fixed
	top 0
	right -200px
	background white
	z-index 1000
	transition right 0.45s ease
	.menu-list
		padding-top 2em
	.menu-item
		a
			display block
			height 2em
			line-height 2em
			padding-left 1em
			&:hover
				background-color gray
		.active1
			background-color gray
	.menu-sub-list
		display none
		&>li
			&>a
				text-indent 1em

// ESTADOS ACTIVE
.active-menu
	right 0
.active-overlay
	z-index 1000
	opacity 0.8
.active-menu-mobile
	visibility hidden
	opacity 0
	transform scale(0,0)
	transition all 0.45s cubic-bezier(.89,1.5,.8,1.06)
.active-menu-mobile-close
	visibility visible
	opacity 1
	transform scale(1,1)

.cnt-wrapper,.footer
	position relative
	left 0
	transition left 0.45s ease
	
		
.active-cnt-wrapper,.active-footer
	left -200px
.body-active
	overflow hidden

@media screen and (max-width: 960px)
	.nav-list
		display none
	.w-nav
		display block

@media screen and (max-width: 480px)
	.footer
		.w-copyright
			margin 0
			padding 1.5em 0
		.copyright
			height auto
			text-align center
			.from
				float none
				margin-bottom 0.4em
			.by
				float none